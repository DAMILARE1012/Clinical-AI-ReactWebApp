# ── Application ──────────────────────────────────────────────────────────────
APP_NAME="Clinical Research Knowledge Hub"
DEBUG=false

# ── Database (AWS RDS MySQL — private subnet) ─────────────────────────────────
# Replace with your actual RDS endpoint after provisioning
MYSQL_HOST=YOUR_RDS_ENDPOINT_HERE.rds.amazonaws.com
MYSQL_PORT=3306
MYSQL_USER=admin
MYSQL_PASSWORD=your_secure_db_password
MYSQL_DATABASE=research_hub

# ── Redis (Amazon ElastiCache — private subnet) ───────────────────────────────
# Replace with your actual ElastiCache primary endpoint
REDIS_HOST=YOUR_ELASTICACHE_ENDPOINT.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=

# ── JWT ───────────────────────────────────────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=replace-with-64-char-random-hex-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ── Pinecone ──────────────────────────────────────────────────────────────────
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=research-hub

# ── Groq ──────────────────────────────────────────────────────────────────────
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.1-70b-versatile

# ── CORS (comma-separated list of allowed origins) ────────────────────────────
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com
